<VBox alignment="TOP_CENTER" prefHeight="592.0" prefWidth="1296.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.SecondaryController">
    <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="110.0" prefWidth="360.0" text="Classes" textAlignment="CENTER">
               <font>
                  <Font name="Miriam" size="100.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@perfetClassLogo.png" />
               </image>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
      <ScrollPane fx:id="classesScrollPane" fitToWidth="true" prefHeight="400.0" prefWidth="1200.0">
         <content>
            <VBox fx:id="vboxDisplay" minWidth="1200.0" />
         </content>
      </ScrollPane>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="secondaryButton" onAction="#switchToPrimary" prefHeight="91.0" prefWidth="222.0" text="make a new placement">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
              <Button prefHeight="94.0" prefWidth="241.0" text="Set the placement in the DataBase">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
